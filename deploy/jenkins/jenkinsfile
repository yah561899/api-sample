pipeline {
  agent {
    kubernetes {
      yaml """
kind: Pod
metadata:
  labels:
    jenkins: kubectl-pod
spec:
  containers:
  - name: kubectl
    image: lachlanevenson/k8s-kubectl:v1.27.0
    command:
    - cat
    tty: true
  nodeSelector:
    kubernetes.io/os: linux
      """
      defaultContainer 'kubectl'
    }
  }
  stages {
    stage('Where am I?') {
      steps {
        sh 'echo "I am in: $(pwd)"'
        sh 'hostname'
        sh 'kubectl get pods -n jenkins'
      }
    }
  }
}
